<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">
	<context:annotation-config />
	<!-- Advice 등록 -->
	<bean id="beforeAdvice" class="exam.BeforeAdvice" />
	<bean id="ref" class="exam.LoginTest" />
	<!--  Aspect 태그를 사용한 AOP 설정 -->
	<aop:config>
		<aop:aspect id="beforeID" ref="beforeAdvice">
			<aop:pointcut expression="execution(* security*(..))" id="pointcutP" />
			<aop:before method="checkLogin" pointcut-ref="pointcutP" />
		</aop:aspect>
	</aop:config>
	<!-- Target -->
	<bean id="bean" class="exam.securityImple" />
</beans>
